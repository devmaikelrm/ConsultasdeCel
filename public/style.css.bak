
:root{
  --bg: #0b1220; --card: rgba(255,255,255,.08); --stroke: rgba(255,255,255,.12);
  --text: #e6edf6; --muted: #a6b2c2; --primary: #5b8cff; --primary-2:#7b5bff; --radius:16px;
}
*{box-sizing:border-box} html,body{height:100%}
body{margin:0;font-family:'Inter',system-ui,Segoe UI,Roboto,Arial,sans-serif;background:#0b1220;color:var(--text);line-height:1.6}
.container{width:min(1100px,92%);margin-inline:auto;padding:28px 0}
.narrow{width:min(720px,92%)}
/* Compacta el login para evitar scroll */
body[data-page="login"] .container{padding:16px 0}
body[data-page="login"] .card{padding:16px}
body[data-page="login"] .footer{margin-top:12px;padding:12px 0}
.navbar{position:sticky;top:0;z-index:10;background:rgba(11,18,32,.6);backdrop-filter:blur(10px);border-bottom:1px solid var(--stroke)}
.nav-inner{display:flex;justify-content:space-between;align-items:center;gap:12px}
.brand{color:var(--text);text-decoration:none;font-weight:700}
.nav-links{display:flex;gap:14px;align-items:center}
.nav-links a{color:var(--text);opacity:.9;text-decoration:none}
.nav-links a:hover{opacity:1}
.link{background:none;border:none;color:var(--text);opacity:.9;cursor:pointer;font:inherit;padding:0;text-decoration:none}
.link:hover{opacity:1}
.link{background:none;border:none;color:var(--text);opacity:.9;cursor:pointer;font:inherit;padding:0;text-decoration:none}
.link:hover{opacity:1}
.hero{display:grid;place-items:center;min-height:38vh;border-radius:var(--radius);margin-top:18px;padding:48px;text-align:center}
.gradient{background:linear-gradient(90deg,var(--primary),var(--primary-2));-webkit-background-clip:text;background-clip:text;color:transparent}
.lead{color:var(--muted);max-width:56ch;margin:.5rem auto 1.2rem}
.card{padding:22px;border-radius:var(--radius);border:1px solid var(--stroke);background:var(--card)}
.glass{}
.row{display:flex;gap:10px;flex-wrap:wrap}
.row-between{display:flex;justify-content:space-between;align-items:center;gap:10px}
.btn{display:inline-block;background:linear-gradient(180deg,var(--primary),var(--primary-2));color:#fff;border:none;border-radius:12px;padding:.8rem 1.1rem;font-weight:700;text-decoration:none;cursor:pointer}
.btn.outline{background:transparent;border:1px solid var(--primary);color:var(--text)}
.footer{border-top:1px solid var(--stroke);background:rgba(11,18,32,.6);text-align:center;color:var(--muted);padding:18px 0;margin-top:24px}
.form{display:grid;gap:.9rem}
.form label{display:grid;gap:.35rem;font-weight:600}
.form input{background:rgba(255,255,255,.04);color:var(--text);border:1px solid var(--stroke);padding:.8rem .9rem;border-radius:12px}
.form input:focus{outline:none;border-color:var(--primary);box-shadow:0 0 0 3px rgba(91,140,255,.25)}
.search{width:100%;padding:.8rem .9rem;border:1px solid var(--stroke);border-radius:12px;background:rgba(255,255,255,.04);color:var(--text);margin:.2rem 0 1rem}
.list .card{margin:.6rem 0}

/* Helpers */
.muted{color:var(--muted)}

/* Donate badges */
.badges{display:flex;flex-wrap:wrap;gap:10px}
.badge{display:inline-flex;align-items:center;gap:.45rem;padding:.55rem .9rem;border-radius:999px;border:1px solid var(--stroke);background:rgba(255,255,255,.06);color:var(--text);text-decoration:none;font-weight:600}
.badge .emoji{font-size:1.1rem}
.badge.cup .emoji{font-size:0}
.badge.cup .emoji::before{content:'ðŸ‡¨ðŸ‡º';font-size:1.1rem}
.badge.paypal{background:linear-gradient(135deg,#003087,#009cde);border-color:transparent;color:#fff}
.badge.cup{background:rgba(255,255,255,.08)}

/* Modal */
.backdrop{position:fixed;inset:0;background:rgba(0,0,0,.5);backdrop-filter:blur(2px);display:none}
.modal{position:fixed;inset:0;display:none;place-items:center;padding:16px}
.modal .panel{width:min(720px,92%);background:var(--card);border:1px solid var(--stroke);border-radius:var(--radius);padding:20px}
.modal .panel h2{margin-top:0}
.modal.open,.backdrop.open{display:grid}
.btns{display:flex;gap:10px;justify-content:flex-end;margin-top:12px}

/* guard-fouc */
html[data-page='dashboard'], body[data-page='dashboard']{min-height:100%}


/* ======= UI Upgrade ======= */
:root{
  --bg: #0b1220; --card: rgba(255,255,255,.05); --muted: #9aa4b2; --text:#ecf0f3;
  --brand:#5b9cff; --brand-2:#21d4fd; --accent:#a78bfa; --ok:#10b981; --warn:#f59e0b; --err:#ef4444;
  --radius: 16px;
}
*{box-sizing:border-box}
html,body{margin:0;padding:0;background:var(--bg);color:var(--text);font-family:Inter,system-ui,Segoe UI,Roboto,Arial,sans-serif;line-height:1.55}
img{max-width:100%;display:block}
a{color:var(--brand);text-decoration:none} a:hover{text-decoration:underline}
.container{width:min(1100px, 92%);margin-inline:auto}
.glass{background:var(--card);backdrop-filter: blur(12px); border:1px solid rgba(255,255,255,.08); border-radius:var(--radius);}
.navbar{position:sticky;top:0;background:rgba(8,12,24,.7);backdrop-filter: blur(10px);border-bottom:1px solid rgba(255,255,255,.06);}
.navbar .container{display:flex;align-items:center;justify-content:space-between;padding:14px 0}
.brand{display:flex;align-items:center;gap:10px;font-weight:700;color:var(--text)}
.brand .logo{width:34px;height:34px;border-radius:10px;background:linear-gradient(135deg,var(--brand),var(--accent));display:grid;place-items:center}
.navlinks,.nav-links{display:flex;gap:18px}
.navlinks a,.nav-links a{color:var(--muted);font-weight:600}
.navlinks a.active,.navlinks a:hover,.nav-links a.active,.nav-links a:hover{color:var(--text)}

main{padding:28px 0}
.hero{padding:28px 22px}
.lead{color:var(--muted)}
.grid{display:grid;gap:16px}
.grid-3{grid-template-columns:repeat(3,minmax(0,1fr))}
@media(max-width:800px){.grid-3{grid-template-columns:1fr 1fr}}
@media(max-width:520px){.grid-3{grid-template-columns:1fr}}

.card{background:var(--card);border:1px solid rgba(255,255,255,.06);border-radius:var(--radius);padding:18px}
.card h3{margin:0 0 6px 0}

.form{display:grid;gap:14px}
label{font-weight:600;font-size:.95rem}
input,select,textarea{width:100%;padding:12px 14px;border-radius:12px;background:rgba(255,255,255,.06);border:1px solid rgba(255,255,255,.08);color:var(--text);outline:none}
input:focus,select:focus,textarea:focus{border-color:var(--brand);box-shadow:0 0 0 3px rgba(91,156,255,.25)}
.btn{display:inline-flex;align-items:center;justify-content:center;gap:8px;border:0;border-radius:12px;padding:11px 16px;background:linear-gradient(135deg,var(--brand),var(--accent));color:#0b1220;font-weight:800;cursor:pointer}
.btn:hover{filter:brightness(1.08)} .btn:disabled{opacity:.6;cursor:not-allowed}
.btn.outline{background:transparent;color:var(--text);border:1px solid rgba(255,255,255,.14)}

.table{width:100%;border-collapse:collapse}
.table th,.table td{padding:10px 12px;border-bottom:1px solid rgba(255,255,255,.06);text-align:left}
.table thead th{color:var(--muted);font-weight:700}

.footer{border-top:1px solid rgba(255,255,255,.06);padding:18px 0;margin-top:28px;color:var(--muted)}

.badges{display:flex;gap:10px;justify-content:flex-end;margin-top:12px}
.badge{display:inline-flex;align-items:center;gap:6px;border:1px solid rgba(255,255,255,.12);padding:8px 10px;border-radius:999px;background:rgba(255,255,255,.04)} 
.badge.subtle{opacity:.8}
.badge .emoji{filter:saturate(1.2)}

.form-status,.status{min-height:1.4em;color:var(--muted);font-weight:600}
.success{color:var(--ok)} .warn{color:var(--warn)} .error{color:var(--err)}

/* guard-fouc: keep */


/* ===== Quick action cards & settings card ===== */
.h1{font-size:1.8rem;margin:0 0 .4rem 0;font-weight:800}
.h2{font-size:1.2rem;margin:0;font-weight:800}
.accent{color:var(--brand)}
.pad-lg{padding:20px}
.pad-xl{padding:26px}

.grid-2{display:grid;grid-template-columns:repeat(2,minmax(0,1fr));gap:16px}
@media(max-width:800px){.grid-2{grid-template-columns:1fr}}

.action-card{display:flex;align-items:center;gap:14px;padding:16px;border-radius:16px;
  background:linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03));
  border:1px solid rgba(255,255,255,.08); text-decoration:none; color:var(--text);}
.action-card:hover{transform:translateY(-1px);filter:brightness(1.03)}
.icon-circle{width:46px;height:46px;border-radius:14px;display:grid;place-items:center;
  background:linear-gradient(135deg,var(--brand),var(--accent)); color:#0b1220;font-size:1.2rem;font-weight:800}
.action-text h3{margin:0;font-size:1.05rem}
.action-text p{margin:.2rem 0 0 0;color:var(--muted)}

.settings{margin-top:18px}
.settings-head{display:flex;align-items:center;gap:12px;margin-bottom:12px}
.avatar-circle{width:40px;height:40px;border-radius:999px;display:grid;place-items:center;
  background:linear-gradient(135deg,var(--brand),var(--accent)); color:#0b1220;font-weight:900}
.quick-grid{margin-top:12px}

/* ===== Toasts ===== */
.toast-wrap{position:fixed;right:16px;bottom:16px;display:flex;flex-direction:column;gap:10px;z-index:9999}
.toast{opacity:0;transform:translateY(8px);transition:opacity .25s, transform .25s; padding:10px 14px;border-radius:12px;font-weight:700;border:1px solid rgba(255,255,255,.14);background:rgba(0,0,0,.65);backdrop-filter:blur(8px)}
.toast-ok{color:#bbf7d0;border-color:rgba(16,185,129,.5)}
.toast-err{color:#fecaca;border-color:rgba(239,68,68,.5)}
.toast.show{opacity:1;transform:translateY(0)}
.avatar-circle{overflow:hidden}

/* ===== Login splash & spinner ===== */
.hidden{display:none}
.splash{display:flex;align-items:center;gap:16px;margin-bottom:16px}
.spinner{width:28px;height:28px;border-radius:50%;
  border:3px solid rgba(255,255,255,.22); border-top-color: var(--brand);
  animation: spin 0.9s linear infinite}
@keyframes spin{to{transform:rotate(360deg)}}
